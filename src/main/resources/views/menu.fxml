<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MenuController">
    <AnchorPane prefHeight="600.0" prefWidth="800.0">
      <children>
         <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <center>
               <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
                  <children>
                     <Button fx:id="playButton" mnemonicParsing="false" onAction="#playButtonPressed" text="Play">
                        <font>
                           <Font name="System Bold" size="48.0" />
                        </font>
                     </Button>
                     <Button fx:id="generateButton" mnemonicParsing="false" onAction="#generateButtonPressed" text="Generate">
                        <font>
                           <Font size="48.0" />
                        </font>
                     </Button>
                     <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitButtonPressed" text="Exit">
                        <font>
                           <Font name="System Bold" size="48.0" />
                        </font>
                     </Button>
                  </children>
               </VBox>
            </center>
         </BorderPane>
      </children></AnchorPane>
</Scene>
